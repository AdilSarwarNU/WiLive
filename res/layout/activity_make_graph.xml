<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_theme"
    tools:context=".MakeGraph" 
    android:orientation="vertical">

<LinearLayout android:id="@+id/graphContainer"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="0dp" 
    android:layout_weight="2">
    
</LinearLayout>   

<LinearLayout
    android:id="@+id/graphStatsContainer"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:orientation="vertical" >  
   
    
     <TextView
        android:layout_width="match_parent"
        android:layout_height="10pt"
        android:text="Units Used :" 
        android:textColor="@color/black_theme"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="match_parent"
         android:layout_height="10pt"
        android:text="Expected Bill :" 
        android:textColor="@color/black_theme"
        android:textSize="20sp"/>
 
    
</LinearLayout>

	
</LinearLayout>
